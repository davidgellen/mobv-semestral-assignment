<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/entryInfo"
        android:name="com.example.cv2.fragment.EntryInfo"
        android:label="fragment_entry_info"
        tools:layout="@layout/fragment_entry_info" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="businessName"
            app:argType="string" />
        <argument
            android:name="lattitude"
            app:argType="float" />
        <argument
            android:name="longtitude"
            app:argType="float" />
        <action
            android:id="@+id/action_entryInfo_to_allEntriesFragment"
            app:destination="@id/allEntriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewEntry"
        android:name="com.example.cv2.fragment.AddNewEntry"
        android:label="fragment_add_new_entry"
        tools:layout="@layout/fragment_add_new_entry" >
        <action
            android:id="@+id/action_addNewEntry_to_entryInfo"
            app:destination="@id/entryInfo" />
    </fragment>
    <fragment
        android:id="@+id/allEntriesFragment"
        android:name="com.example.cv2.fragment.AllEntriesFragment"
        android:label="fragment_all_entries"
        tools:layout="@layout/fragment_all_entries" >
        <action
            android:id="@+id/action_allEntriesFragment_to_addNewEntry"
            app:destination="@id/addNewEntry" />
        <action
            android:id="@+id/action_allEntriesFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment" />
        <action
            android:id="@+id/action_allEntriesFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <action
            android:id="@+id/action_allEntriesFragment_to_checkInPubFragment"
            app:destination="@id/checkInPubFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryDetailFragment"
        android:name="com.example.cv2.fragment.EntryDetailFragment"
        android:label="fragment_entry_detail"
        tools:layout="@layout/fragment_entry_detail" >
        <action
            android:id="@+id/action_entryDetailFragment_to_allEntriesFragment"
            app:destination="@id/allEntriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.cv2.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cv2.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/allFriendsFragment"
        android:name="com.example.cv2.fragment.AllFriendsFragment"
        android:label="fragment_all_friends"
        tools:layout="@layout/fragment_all_friends" >
        <action
            android:id="@+id/action_allFriendsFragment_to_addFriendFragment"
            app:destination="@id/addFriendFragment" />
        <action
            android:id="@+id/action_allFriendsFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFriendFragment"
        android:name="com.example.cv2.fragment.AddFriendFragment"
        android:label="fragment_add_friend"
        tools:layout="@layout/fragment_add_friend" >
        <action
            android:id="@+id/action_addFriendFragment_to_allFriendsFragment"
            app:destination="@id/allFriendsFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.cv2.fragment.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_allEntriesFragment"
            app:destination="@id/allEntriesFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_allFriendsFragment"
            app:destination="@id/allFriendsFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_checkInPubFragment"
            app:destination="@id/checkInPubFragment" />
        <action
            android:id="@+id/action_homeScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkInPubFragment"
        android:name="com.example.cv2.CheckInPubFragment"
        android:label="fragment_check_in_pub"
        tools:layout="@layout/fragment_check_in_pub" >
        <action
            android:id="@+id/action_checkInPubFragment_to_allEntriesFragment"
            app:destination="@id/allEntriesFragment" />
    </fragment>
</navigation>